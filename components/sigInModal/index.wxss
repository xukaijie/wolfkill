/* components/sigInModal/index.wxss */



.modal{

  position: fixed;
  width: 100%;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
  background :rgba(0,0,0,0.5);
  align-items: center;
  justify-content: center;
  display: flex;
  z-index: 999;
}


.item{
   width: 500rpx;
   height:300rpx;
   background: #fff;
   padding: 10rpx 20rpx;

   font-size:28rpx;
}
.itemTitle{
   color:rgba(0, 0, 0, 0.2);
   margin-left:5rpx;
}


.picker{
    font-size:24rpx;
    width:calc(100% -20rpx);
    height:100rpx;
    line-height: 60rpx;
    color:rgba(0, 0, 0, 0.5);
    padding-left: 20rpx;
    text-align: left;
    background:#eee;
    border-radius:10rpx;
    border:1rpx solid rgba(0, 0, 0, 0.06);
    margin-top: 10rpx;
}

.sigInBtn{

  width:100%;
  height:80rpx;
  border-radius:10rpx;
  background: #3ab3ff;
  color: #fff;

  margin-top:50rpx;
  font-size:30rpx;
}